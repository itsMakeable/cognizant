hgradient2 = linear-gradient(90deg, darkgreen 0%, black 100%)
hgradient3 = linear-gradient(90deg, darkblue 0%, lightblue 100%)
hgradient4 = linear-gradient(90deg, green 0%, darkblue 100%)
hgradient5 = linear-gradient(90deg, green 0%, lightblue 100%)
hgradient6 = linear-gradient(90deg, #149a4a 0%, #6db33f 100%)
hreversegradient5 = linear-gradient(0deg, green 0%, lightblue 100%)
		
.gradient1--horizontal
	background: hgradient1

.gradient2--horizontal
	background: hgradient2

.gradient3--horizontal
	background: hgradient3

.gradient4--horizontal
	background: hgradient4

.gradient5--horizontal
	background: hgradient5

.gradient6--horizontal
	background: hgradient6