/*!**
  title: Vertical Gradients
  section: Colors
  example: |
    <div class='gradient1--vertical' style='border: 2px solid white; height:200px;'></div>
    <div class='gradient2--vertical' style='border: 2px solid white; height:200px;'></div>
    <div class='gradient3--vertical' style='border: 2px solid white; height:200px;'></div>
    <div class='gradient4--vertical' style='border: 2px solid white; height:200px;'></div>
    <div class='gradient5--vertical' style='border: 2px solid white; height:200px;'></div>
***/
vgradient1 = linear-gradient(35deg, darkblue 0%,black 100%)
vgradient2 = linear-gradient(35deg, darkgreen 0%, black 100%)
vgradient3 = linear-gradient(35deg, darkblue 0%, lightblue 100%)
vgradient4 = linear-gradient(35deg, green 0%, darkblue 100%)
vgradient5 = linear-gradient(35deg, green 0%, lightblue 100%)

.gradient1--vertical
	background: vgradient1

.gradient2--vertical
	background: vgradient2

.gradient3--vertical
	background: vgradient3

.gradient4--vertical
	background: vgradient4

.gradient5--vertical
	background: vgradient5


/*!**
  title: Horizontal Gradients
