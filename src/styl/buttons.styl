/*!**
  title: Primary Button
  section: Buttons & Links
  example: |
    <button class='button--primary'>button</button>
    <button class='button--primary' disabled>Disabled</button>
***/
$button
	line-height r(4.2rem)
	upcase()
	min-width r(20.8rem)
	fs(1.6rem)
	border none
	color white
	background-color blue
	text-align center
	transition background-color 0.3s ease, transform 0.1s linear, color 0.1s ease
	text-decoration none
	transform scale(1)
	border-bottom transparent
	font-family proxSbold
	display inline-block
	white-space: nowrap
	letter-spacing 0.03em
	+ .icon.question-mark
		margin 0 r(-3.3rem) 0 r(1rem)
		+below(420px)
			display block
			margin r(2rem) auto
		
.button--primary,
a.button--primary
	@extend $button
	padding 0 r(5.1rem)

	&:active
		color white
		background-color darkblue
		transform scale(0.98)
		transform-origin 50% 50%
	&[disabled]
		color gray
		background-color darkgray
		transform scale(1) !important
	&:visited
		color white
		background-color blue
	
	&.icon--left
		padding-left r(6.8rem)
		padding-right r(1.6rem)
		i:first-of-type
			size r(4.3rem) r(2.75rem)
			position absolute
			top 0
			bottom 0
			left r(1.3rem)
			color white
			margin auto
			padding r(0.2rem) r(0.9rem) r(0.2rem) 0
			border-right 1px solid rgba(white,0.2)
			transition all 0.3s ease
	&:hover
		color white
		background-color darkblue
		transition background-color 0.3s ease, transform 0.1s linear, color 0.1s ease
.color-bg
	.button--primary:hover
		// color darkblue
		background-color lightblue
		&.icon--left 
			i:first-of-type
				// color darkblue
				border-right 1px solid rgba(darkblue,0.2)
			
.icon.question-mark
	color blue
	position: relative
	size r(2.3rem)
	background-color transparent
	transition color 0.2s ease
	&:hover
		color white
		
/*!**
  title: Silent Button
  section: Buttons & Links
  example: |
    <button class='button--silent'>button</button>
    <button class='button--silent' disabled>Disabled</button>
***/
.button--silent,
a.button--silent
	@extend $button
	background-color transparent
	color blue
	border-bottom 1px solid rgba(blue,0.2)
	line-height 1.2
	min-width 0
	padding 0
	margin r(2.4rem) 0
	display inline-block
	&:link
		color blue
	&:active
		color darkblue
		transform scale(0.98)
		transform-origin 50% 50%
	&[disabled]
		color gray !important
		border-bottom 1px solid rgba(gray,0.2) !important
		transform scale(1) !important
	&:visited
		color blue
	&:hover
		color darkblue !important
		border-bottom 1px solid rgba(darkblue,0.2) !important
	&.is-white
		color white
		&:hover
			color lightblue
		&:active,
		&:visited
			color white

.color-bg
	.button--silent,
	a.button--silent
		&:hover
			color lightblue !important
			border-bottom 1px solid rgba(lightblue,0.2) !important
		
				
