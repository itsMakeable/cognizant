font-size = 10
fs(size)
	if (unit(size) == 'rem')
		font-size round(unit((font-size*size), px))
		font-size size
	else
		font-size size

// absolute positioning
$vertical-align
	position absolute
	top 50%
	transform translateY(-50%)

$center-align
	position absolute
	left 50%
	top 50%
	transform translate(-50%,-50%)
	margin auto

$horizontal-align
	position absolute
	left 50%
	transform translateX(-50%)
	margin auto