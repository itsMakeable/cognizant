*
	-webkit-tap-highlight-color rgba(0,0,0,0)
	box-sizing inherit
	&:before,
	&:after
		box-sizing inherit
	&:focus
		outline none
		
html
	font-size 62.5%
	-webkit-font-smoothing initial
	font-smoothing initial
	// text-rendering optimizeLegibility
	font-smooth always
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	font-family sans-serif
	position relative
	min-height 100%
	overflow-x hidden
	
body
	-webkit-touch-callout none
	-webkit-text-size-adjust none
	// -webkit-user-select none
	color black
	transition opacity 0.3s ease
	height 100%
	.velocity-animating
		transition: none
		
i
	display inline-block
	vertical-align middle
	font inherit
	img, image
		width auto
		margin auto

a
	cursor pointer
	reset-link()
	&:focus
		outline: 0

.cognizant-container
	box-sizing border-box
	hr
		border 0px solid transparent
		border-top 0px solid transparent
		background-color transparent
		border-bottom 1px solid black
		margin 0
		padding 0
		width 100%
		height 1px
		&.green
			border-bottom 1px solid green
		&.blue
			border-bottom 1px solid blue

	main
		position relative

	component,
	subcomponent
		display block
		
	img, svg, object, embed, video, iframe, audio, canvas
		width 100%
		display block
		max-height 100%
		
	ul
		list-style none
	
.hidden
	position: absolute
	height: 0
	width: 0
	visibility: hidden
input.hidden
	display none
[contenteditable]
	// overflow-x scroll
	white-space nowrap

.nowrap
	white-space nowrap

::-moz-selection
	background-color: blue
	color white

::selection
	background-color: blue
	color white

.cogv1_has-overlay
	&:before
		content ''
		@extend $absolute-cover
		background-color rgba(0,0,0,0.6)
		z-index 0

.gradient-hr
	display block
	height 1px
	width 100%
	@extend .gradient5--horizontal

.inline-block
	display inline-block
	.is-center
		margin auto
	
.overlay-is-on
	overflow hidden
	height 100%
	@extend $absolute-cover