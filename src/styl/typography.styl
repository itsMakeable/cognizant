html
	font-family proxReg

h1, h2, h3, h4, h5, h6, p, li
	font-weight: normal
	color inherit

h1
	font-family proxReg
	fs(4.4rem)
	line-height 1.05
	upcase()

h2
	font-family proxReg
	fs(2.8rem)
	line-height 1.14

h3
	font-family proxSbold
	fs(1.6rem)
	line-height 1.25
	upcase()

h4
	font-family proxSbold
	fs(1.6rem)
	line-height 1.25

h5
	font-family proxReg
	fs(5.8rem)
	line-height 1.03

h6
	font-family proxRegIt
	fs(1.8rem)
	line-height 1.2

small
	font-family proxReg
	fs(1.4rem)
	line-height 1.4

p
	font-family proxReg
	fs(1.8rem)
	line-height 1.4
	
strong, b
	font-family proxBold
	font-size inherit
	line-height inherit