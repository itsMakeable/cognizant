///////////////////////////////////////////////////
// THIS DROPDOWN IS SPECIFIC TO THE EDITABLE MODULE
///////////////////////////////////////////////////
.contenteditable-dropdown
  border-radius 0.1rem
  box-shadow: 0px 1px 4px 0px rgba(gray,.5)
  z-index: 1
  background: white
  height 0
  overflow hidden
  transition height 0.5s ease
  &.is-active
    overflow scroll
  ul
    li
      color darkgray
      fs(1.8rem)
      font-family proxReg
      display block
      // line-height 5.6rem
      line-height 2.4rem
      padding 1.6rem 1.3rem
      text-align left
      transition 0.1s ease
      background-color white
      position relative
      cursor: pointer
      span 
          color blue
          font-family proxSbold
      &:after
          content ''
          height 1px
          display block
          background-color gray
          bottom 0
          left 1.3rem
          right 1.3rem
          position: absolute
      &:last-of-type
        &:after
          background-color transparent
      &:hover
          background-color backgray
          