.contenteditable-dropdown
  border-radius r(0.1rem)
  box-shadow: 0px 1px 4px 0px rgba(gray,.5)
  z-index: 1
  background: white
  height 0
  overflow hidden
  transition height 0.5s ease
  position: relative
  // &.is-active
  //   overflow scroll
  &.ps-container > .ps-scrollbar-x-rail,
  &.ps-container > .ps-scrollbar-x-rail > .ps-scrollbar-x
    opacity 0
  &.ps-container > .ps-scrollbar-y-rail,
  &.ps-container > .ps-scrollbar-y-rail > .ps-scrollbar-y
    width 1px
    right -3px
  ul
    li
      color darkgray
      fs(1.8rem)
      font-family proxReg
      display block
      // line-height 5.6rem
      line-height r(2.4rem)
      padding r(1.6rem) r(1.3rem)
      text-align left
      transition 0.1s ease
      background-color white
      position relative
      cursor: pointer
      span,
      &.is-active
          color blue
          font-family proxSbold
      &:after
          content ''
          height 1px
          display block
          background-color gray
          bottom 0
          left r(1.3rem)
          right r(1.3rem)
          position: absolute
      &:last-of-type
        &:after
          background-color transparent
      &:hover
          background-color backgray
          