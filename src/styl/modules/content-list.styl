.content-list
    position relative
    col(6/12, gutter: 6)
    margin-top 3rem
    h2
        font-family proxBold
    @media screen and (max-width: 1024px)
        stack(pad:10%)
        margin-bottom 7rem
        &:last-of-type
            margin-bottom 0
    @media screen and (max-width: 768px)
        stack()
        padding 0
        
.content-list__header
    h3
        color gray
        padding-top 0.2rem
        font-family proxSbold
    
.content-list__header-border
    height 0.2rem
    @extend .gradient5--vertical
    margin-top 2rem 
    
.content-list__item
    padding 2rem 0
    border-bottom 1px solid backgray
    position relative
    h4
        color darkgray
        font-family proxReg
        i
            color gray
            size 1.2rem
            margin-right 0.4rem
            position relative
            top -0.1rem
    p
        color darkblue
        display inline-block
        max-width 90%
        height 2.8rem
        overflow hidden
        @media screen and (max-width: 540px)
            height 2.6rem
        

.content-list__item-CTA
    position absolute
    top 0
    bottom 0
    right 1rem
    margin auto
    size 1.5rem 2.5rem
    color blue
    
.content-list__footer
    margin-top 3rem
    text-align center
    