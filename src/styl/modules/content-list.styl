.content-list
	position relative
	col(6/12)
.content-list__header
	h3
		color gray
		padding-top 0.2rem
	
.content-list__header-border
	height 0.2rem
	@extend .gradient5--vertical
	margin-top 2rem 
	
.content-list__item
	padding 2rem 0
	border-bottom 1px solid backgray
	position relative
	h4
		color darkgray
		font-family proxReg
	p
		color darkblue
		display inline-block
		max-width 90%
		height 2.8rem
		overflow hidden

.content-list__item-CTA
	position absolute
	top 0
	bottom 0
	right 1rem
	margin auto
	size 1.5rem 2.5rem
	
.content-list__footer
	margin-top 3rem
	text-align center
	