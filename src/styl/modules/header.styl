.header--main
    height 50rem
    color white
    padding 7rem 0
    text-align center
    position relative
    @media screen and (max-width: 1140px)
      height auto
      padding 3rem 0 3rem 0
    p
        color blue
        padding 2rem 0 0 0
        font-family proxLight
        display block
        max-width 46rem
        margin auto
    .subheader
      color white
    .search-module--main
      position absolute
      bottom -9.2rem
      @media screen and (max-width: 1140px)
        position: absolute
        bottom -9.2rem
        width 100%
        left 0
        right 0
      @media screen and (max-width: 540px)
        bottom -8rem
        
    // @media screen and (max-width: 420px)
    //   .question-mark
    //     display none
  .icon.question-mark
    overflow visible

.header--section
  padding 6rem 0
  h1
    color blue
  h1, h2, h3, h4, h5, h6, p
    text-align center
  p
    color gray