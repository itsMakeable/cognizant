.main-header
    height 50rem
    color white
    padding-top 10rem
    text-align center
    position relative
    background-size cover !important
    background-position 50% 50% !important
    +below(1140px)
      // height auto
      padding 3rem 0 3rem 0
    h1
      max-width 60rem
      margin auto
    .main-header__body-copy
        padding 1rem 0 0 0
        font-family proxLight
        display block
        max-width 46rem
        margin auto
    .subheader
      color white
    
        
  .icon.question-mark
    overflow visible
    
  +above(1140px)
    .profile-box-module
      top -6.2rem

.header--section
  padding 6rem 0
  h1
    color blue
    padding-bottom 1rem
  h1, h2, h3, h4, h5, h6, p
    text-align center
  p
    color gray
    display block
    max-width 72rem
    margin auto

.main-header__button-container
  margin-top 10rem

.main-header__search-container
    position absolute
    bottom -3rem
    margin auto
    left 0
    right 0
    width 100%
    +below(768px)
      max-width 100%