.main-header
  height r(50rem)
  color white
  padding-top r(10rem)
  text-align center
  position relative
  background darkblue vgradient1alt
  background-size cover !important
  background-position 50% 50% !important
  +below(1140px)
    height auto
    padding-bottom r(10rem)
  +below(420px)
    padding-top r(6rem)
    padding-bottom r(5rem)
  h1
    max-width r(60rem)
    margin auto
  h4
    upcase()
  .main-header__body-copy
      padding r(1rem) 0 0 0
      font-family proxLight
      display block
      max-width r(46rem)
      margin auto
  .subheader
    color white
        
  .icon.question-mark
    overflow visible
  .search-module
    z-index 10
  +above(1140px)
    .profile-box-module
      top r(-6.2rem)

.mini-header--section
  padding r(3rem) 0
  position relative
  h1, h2, h3, h4, h5, h6, p
    text-align center
    
.header--section
  padding r(6rem) 0
  text-align center
  .icon
    color blue
    size r(3.8rem)
    position absolute
    left r(-5rem)
    top 0
    margin auto
    +below(640px)
      size r(2.8rem)
      left r(-4rem)
  h1
    color blue
    padding-bottom r(1rem)
    upcase()
    position relative
    &.capitalize
      text-transform capitalize
    +below(640px)
      fs(2.8rem)
  h1, h2, h3, h4, h5, h6, p
    text-align center
  p
    color darkgray
    display block
    max-width r(58rem)
    margin auto

.main-header__button-container
  margin-top r(11rem)
  +below(540px)
    margin-top r(4rem)

.main-header__search-container
    position absolute
    bottom r(-3rem)
    margin auto
    left 0
    right 0
    width 100%
    z-index 100
    +below(768px)
      max-width 100%
      padding 0
    
.cogv1_mini-header
  height r(30.8rem)
  background-size cover !important
  background-position 50% 50% !important
  position relative
  .container
    position relative
    height inherit
  h1
    padding-bottom r(1rem)
  h1, h2, h3, h4, h5, h6, p
    text-align center
    
.cogv1_mini-header__center
  top 30%
  position absolute
  left 0
  right 0
  +below(1140px)
    left r(2rem)
    right r(2rem)
  
// ICON HEADER ON LATEST STRATEGIES PAGE

.cogv1_icon-header
  padding r(4rem) 0 0 0
  h3
    color gray
  .gradient-hr
    margin-top r(2rem)
    margin-bottom r(2rem)
    +below(960px)
      margin-bottom r(4rem)
    
.cogv1_icon-header__icon
  size r(9rem) r(7.5rem)
  max-width r(12rem)
  padding-right r(2rem)
  svg
    max-width r(9rem)
  +between(540px,768px)
    size r(12rem) r(10rem)
  
.cogv1_icon-header__icon,
.cogv1_icon-header__title
  display table-cell
  vertical-align middle
  
.cogv1_icon-header__share.share-flyout__trigger
  color blue
  size r(3.8rem)
  position absolute
  right 0
  top r(-1rem)
  bottom 0
  margin auto
  +below(960px)
    top auto
    bottom r(-1rem)

.cogv1_icon-header__share-flyout-wrapper
  position absolute
  right r(3.8rem)
  top r(-1rem)
  bottom 0
  margin auto
  height r(3.8rem)
  overflow hidden
 
  +below(960px)
    top auto
    bottom r(-1rem)
  &.is-active
    .cogv1_icon-header-flyout
      transform translateX(0%)
    .cogv1_icon-header__share__icon.share-flyout__icon
      opacity 1
    &:hover
      .cogv1_icon-header__share__icon.share-flyout__icon
        opacity 0.7
  
.cogv1_icon-header-flyout
  transform translateX(100%)
  
.cogv1_icon-header__share__icon.share-flyout__icon
  transition 0.2s ease
  color blue
  size r(3.8rem)
  opacity 0
  &:hover
    color blue

.cogv1_page-header
  background-size cover !important
  background-position 50% 50% !important
  position relative
  padding r(10rem) 0 r(8rem) 0
  h1
    text-align left
  hr
    margin r(2rem) 0
  .button--tertiary
    margin-top r(3rem)
    