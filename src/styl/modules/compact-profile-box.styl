.compact-profile-box__container
  height 0
  overflow visible
  position relative
  +below(540px)
    padding 0
  
.compact-profile-box-module
  position relative
  +above(1024px)
    &.show-for-small
      display none
  
.compact-profile-box-bar
  background-color: backgray
  color black
  padding r(1.4rem) r(2rem) r(1rem)
  text-align left
  margin 0 auto
  position relative
  margin auto
  width 100%
  top 0
  z-index 500
  cf()
  
.compact-profile-box__profile-pic
  size r(3.2rem)
  border-radius 50%
  overflow hidden
  float left
  margin-right r(1.4rem)
  margin-left r(1rem)

.compact-profile-box__notification
  @extend $notification-circle
  position absolute
  left r(1rem)
  top r(-0.2rem)

.compact-profile-box__details
  float left
  line-height r(3.4rem)
  +below(640px)
    .hide-small
      display none
        
.compact-profile-box__aside
  float right
  position relative
  .icon
    size r(4.8rem) r(3.5rem)
    padding 0 r(1rem)
    margin-left r(1rem)
    color blue
    display inline-block
    cursor pointer
    transition 0.3s ease
    &:hover
      color darkblue
      
.compact-profile-box__flyout
  background-color: white
  position: absolute
  padding: r(2.6rem) r(3rem) r(1.8rem)
  width: r(33rem)
  top: r(5.9rem)
  right: 0
  max-height: r(39rem)
  text-align: center
  z-index: 1
  opacity 0
  transform translateY(-100%)
  transition transform 0s linear 0.1s, opacity 0.1s linear
  +below(420px)
    width: 100%
  &.is-active
    opacity 1
    transform translateY(0%)
    transition transform 0.4s cubic-bezier(.73,.88,0,1.1) 0.1s, opacity 0.1s linear 0.1s, z-index 0s linear 0.45s
    z-index: 501
  .profile-box__list-notification
    left r(-1.9rem)
    top r(0.1rem)
  .profile-box__list-item
    padding 0 0 r(2rem) r(1rem)
  .profile-box__indicator
    top r(-1.8rem)
    transform rotate(90deg)
    transform-origin 50% 50%
    border-color: transparent white transparent transparent
    left auto
  &.compact-profile-box__flyout--settings
    .profile-box__indicator
      right r(3.8rem)
  &.compact-profile-box__flyout--notifications
    .profile-box__indicator
      right r(9.9em)
    
    