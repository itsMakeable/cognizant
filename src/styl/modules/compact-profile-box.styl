.compact-profile-box__container
  height 0
  overflow visible
  position relative
  
.compact-profile-box-module
  background-color white
  color black
  padding 1.4rem 2rem
  text-align left
  margin 0 auto
  position relative
  margin auto
  width 100%
  top 0
  z-index 500
  cf()
  p
    line-height 3.2rem
  +above(1024px)
    display none
  +below(620px)
    .profile-box__details
      span
        display none

.compact-profile-box__profile-pic
  size 3rem
  border-radius 50%
  overflow hidden
  float left
  margin-right 1.4rem
  margin-left 1rem

.compact-profile-box__alert
  @extend $alert-circle
  position absolute
  right 3rem
  top -0.2rem

.compact-profile-box__details
  float left
        
.compact-profile-box__aside
  float right
  position relative
  .icon
    size 4.8rem 3.5rem
    padding 0 1rem
    color blue
    display inline-block
    cursor pointer
    transition 0.3s ease
    &:hover
      color darkblue