.contenteditable-module
  span(8/12)
  margin auto
  float none
  text-align: center
  cf()
  h1
    fs(4.4rem)
    font-family proxLight
    color: gray
    line-height: 1.3
    +below(768px)
      fs(3rem)
  h2
    font-family proxReg
  .is-editable
    display inline-block
    position relative
    color rgba(gray,0.5)
    font-family proxLightIt
    &:after,
    &:before
      content ''
      height 1px
      position absolute
      left 0
      right 0
      bottom r(0.6rem)
    &:before
      background-color gray
      // width 100%
      z-index: 1
    &:after
      background: vgradient5
      width 0%
      transition width 0.6s ease-out
      z-index: 2
    .icon
      size r(3rem)
      right 0
      top r(1.7rem)
      background-color white
      padding r(0.7rem)
      position absolute
      color blue
      cursor pointer
      transform rotate(90deg)
      transform-origin 50% 50%
      transition all 0.3s cubic-bezier(.73,.49,.28,1.21)
      &.is-active
        transform rotate(-90deg)
    [contenteditable]
      text-align left
      transition min-width 0.8s ease-out 0.1s, color 0.3s ease, background 0.3s ease
      // width 100%
    &.has-dropdown
      [contenteditable]
        margin-right r(4rem)
        +below(768px)
          margin-right r(3rem)
      &:before,
      &:after
        right r(4rem)
        +below(768px)
          right r(3rem)
    .contenteditable-dropdown
      position absolute
      width 100%
      z-index: 10
      top r(5.1rem)
      +below(768px)
        li
          fs(1.4rem)
  .is-filled,
  .is-active
      .icon
        color blue
      [contenteditable]
        color green
        font-family proxLight
        
      &:after
        width 100%
        transition width 0.6s ease-out

  +below(1024px)
    stack()
    .is-editable
      .icon
        top r(0.7rem)
      .contenteditable-dropdown
        top r(4.3rem)

  +below(768px)
    .is-editable
      .icon
        top r(0.3rem)
      .contenteditable-dropdown
        top r(3.3rem)
  h2
    .is-editable 
      .icon
        top 0
.contenteditable__text
  margin auto
  margin-bottom r(6rem)
  h2
    > div
      display inline-block
  .noneditable
    display inline-block
    overflow hidden
  .ps-container > .ps-scrollbar-x-rail > .ps-scrollbar-x
    height 1px
    bottom r(1.1rem)
    +below(768px)
      bottom r(0.4rem)

.contenteditable__wrapper
  overflow hidden
  position: relative
  
.contenteditable__button-box
  text-align center

.contenteditable-module.smart-search__option
  .contenteditable__text
    margin-left auto
    margin-right auto
    max-width r(64rem)
  .contenteditable__wrapper
    top r(0.4rem)
  .is-editable:after,
  .is-editable:before
    bottom r(-0.2rem)
    
.chrome,
.safari
  .contenteditable-module
    h2 [contenteditable]
      background: rgba(gray,0.5) 
      -webkit-background-clip: text
      -webkit-text-fill-color: transparent
    h2 .is-filled [contenteditable],
    h2 .is-active [contenteditable]
      background: vgradient5
      -webkit-background-clip: text
      -webkit-text-fill-color: transparent