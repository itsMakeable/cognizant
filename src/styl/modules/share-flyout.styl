// THIS NEEDS TO BE CONFIGURED ACCORDING TO POSITION ON THE PAGE
.share-flyout
    // z-index: 0
    transition transform 0.4s cubic-bezier(.4,-0.17,.33,1)
    
    &:hover
      .share-flyout__icon
        opacity 0.7
            

.share-flyout__trigger
    z-index 10
    transition 0.05s linear 0s
    color white
    cursor pointer
    &.is-active
      color blue

.share-flyout__icon
    display inline-block
    position relative
    color white
    size r(3.5rem)
    cursor pointer
    .icon
        align()
        size 50%
        transition opacity 0.2s ease
    &:hover
        color white
        opacity 1 !important

.share-flyout__wrapper
  overflow hidden
  position absolute
  &.is-active
    .share-flyout
      transform translateX(0)