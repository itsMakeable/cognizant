// Media Queries 540, 670, 940, 1024, 1140

.social-group-module
  position relative
  text-align center
  .button--silent
    text-align center

.social-group-show-small
  display none
  text-align left
  stack(pad: 16%)
  +below(680px)
    display block
  +below(540px)
    padding 0
  p
    display inline-block
    line-height 1
    vertical-align middle
  b
    display block
    upcase()
    color black
  small
    color gray
    fs(1.2rem)
  hr
    margin 1rem 0 0 0
    border-bottom 1px solid blue
    
+below(680px)
  .social-group-hide-small
    display none

.social-group__hr
  height 1px
  // @extend .gradient5--horizontal
  background-color blue
  position relative
  top 30px
  z-index 0
  width 100%

  
.social-group__hr-caret
  size 2.6rem
  position: absolute
  top 30px
  left 0
  right 0
  margin auto
  color blue
  transform translateX(0rem)
  transition 0.5s cubic-bezier(.73,.49,.28,1.21)
  &.is-long-distance
    transition 0.5s cubic-bezier(.73,.88,0,1.1) 0.02s
  &.is-left
    transform translateX(-780%)
  &.is-right
    transform translateX(780%)
  +below(1024px)
    &.is-left
      transform translateX(-815%)
    &.is-right
      transform translateX(815%)
  +below(940px)
    &.is-left
      transform translateX(-536%)
    &.is-right
      transform translateX(536%)
  
.social-group__icon
  text-align center
  height 8.2rem
  position relative
  overflow hidden
  width 24.6rem 
  &.facebook
    background transparent url(svg/social__facebook.svg) no-repeat
    background-size 24.6rem 8.2rem
    background-position 50% 50%
  &.twitter
    background transparent url(svg/social__twitter.svg) no-repeat
    background-size 24.6rem 8.2rem
    background-position 50% 50%
  &.linkedin
    background transparent url(svg/social__linkedin.svg) no-repeat
    background-size 24.6rem 8.2rem
    background-position 50% 50%
  +below(940px)
    height 5.7rem 
    width 17.2rem
    &.facebook
      background transparent url(svg/social__facebook.svg) no-repeat
      background-size 17.2rem 5.7rem 
      background-position 50% 50%
    &.twitter
      background transparent url(svg/social__twitter.svg) no-repeat
      background-size 17.2rem 5.7rem 
      background-position 50% 50%
    &.linkedin
      background transparent url(svg/social__linkedin.svg) no-repeat
      background-size 17.2rem 5.7rem 
      background-position 50% 50%
    
  &:nth-child(1)
    left 5%
    .social-group__icon-slide
      left 5%
  &:nth-child(3)
    right 5%
    .social-group__icon-slide
      right 5%
      transform translateX(-8.2rem)
      +below(940px)
        transform translateX(-5.7rem)

  &.is-active .social-group__icon-slide
    transform translateX(0rem)
    transition all 0.32s ease 0.15s

.social-group__icon.is-active
  + .social-group__icon
    .social-group__icon-slide
      transform translateX(-8.2rem)
      +below(940px)
        transform translateX(-5.7rem)
        
  
.social-group__icon-slide
  height 8.2rem 
  width 24.6rem
  position absolute
  z-index -1
  bottom 0
  left 0
  right 0
  top 0
  margin auto
  background url(svg/social__bg--middle.svg) no-repeat
  background-size 24.6rem 8.2rem
  background-position 50% 50%
  transform translateX(8.2rem)
  transition all 0.35s ease 0s
  +below(940px)
    height 5.7rem 
    width 17.2rem
    background-size 17.2rem 5.7rem
    transform translateX(5.7rem)
  
.is-active
  .is-long-distance 
    .social-group__icon-slide
      transition all 0.2s ease 0.2s
    &:nth-child(2)
      transition all 0.2s ease 0.1s
  
.social-group__groups
  col(10/12, offset: 1/12)
  overflow hidden
  +below(1140px)
    col(1/1, offset: 0/12)

.social-group__groups--icons
  +below(680px)
    display none
    
.social-group__group
  col(4/12)
  +below(680px)
    stack(pad: 16%)
    display none
    margin-bottom 8rem
    &:nth-child(1),
    &:nth-child(2)
      display block
  +below(540px)
    stack(pad: 0)
    padding 0
    display none
    margin-bottom 6rem
    &:nth-child(1),
    &:nth-child(2)
      display block
      
.social-group__content
  padding 8rem 3rem 2rem
  color darkgray
  background transparent
  text-align left
  +below(1140px)
    padding 8rem 0.5rem 4rem
  small
    color gray
    fs(1.4rem)
    line-height 1.8
  h2
    color darkgray
    fs(2.4rem)
    overflow hidden
    height 22rem
    +below(940px)
      height 16rem
    
  +below(940px)
    small
      fs(1.2rem)
      span
        display none
    h2
      fs(1.9rem)
  +below(680px)
    padding 1rem 0rem 2rem
    small
      display none
    h2
      height auto


+above(680px)
  .social-group__groups--text
    position absolute
    top 0
    left 0
    .social-group__group
      transform translateX(30rem)
      opacity 0
      transition opacity 0.3s linear, transform 0.5s cubic-bezier(.73,.88,0,1.1)

  &.is-active
    position relative
    .social-group__group
      opacity 1
      transform translateX(0rem)
      transition opacity 0.2s linear 0.2s, transform 0.45s cubic-bezier(.73,.88,0,1.1) 0.12s
    ~ .social-group__groups--text
      .social-group__group
        transform translateX(-30rem)
    &.is-long-distance
      .social-group__group
        transition opacity 0.2s linear 0.2s, transform 0.5s cubic-bezier(.73,.88,0,1.1) 0.05s

.social-group__icon--small
  color gray
  size 3rem
  margin-right 0.6rem
  @media screen and (min-width: 680px)
    display none
  +below(680px)
    display inline-block
    vertical-align middle

.chrome,
.safari
  .social-group__content
    h2
      background: hreversegradient5
      -webkit-background-clip: text
      -webkit-text-fill-color: transparent


.social-group__CTA-container
  text-align left
  +above(680px)
   text-align center
  
  