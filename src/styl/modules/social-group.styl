.social-group-module
  position relative
  text-align center
  .button--silent
    text-align center
    
.social-group__hr
  height 1px
  // @extend .gradient5--horizontal
  background-color blue
  position relative
  top 105px
  z-index -1

.social-group__icon
  text-align center
  col(4/12)
  background-color gray
  img, svg
    margin auto
    display block
    size 100% 8.2rem
    position relative
    z-index 1
  path
    width 100%
  &:nth-child(1) img
    float right
  &:nth-child(3) img
    float left

.social-group__icon-slide
  size 16.4rem 8.2rem
  position absolute
  z-index -1
  top 1px
  bottom 1px
  margin auto

.social-group__icon-slide--on,
.social-group__icon-slide--off
  display inline-block
  size 8.2rem
  group()

.social-group__icon-slide--off
  color gray
  float left

.social-group__icon-slide--on
  background-color  blue  
  float right

.social-group__groups
  col(10/12, offset: 1/12)

.social-group__group
  col(4/12)
      
.social-group__content
  padding 8rem 3rem 4rem
  color darkgray
  margin-bottom 4rem
  background transparent
  text-align left
  small
    color gray
    fs(1.6rem)
    line-height 1.8
  h2
    color blue
    fs(2.4rem)

.chrome,
.safari
  .social-group__content
    h2
      background: hreversegradient5
      -webkit-background-clip: text
      -webkit-text-fill-color: transparent

.social-group__CTA-container
  text-align center