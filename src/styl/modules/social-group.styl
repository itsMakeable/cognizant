.social-group-module
  position relative
  text-align center
  
  .button--silent
    text-align center
    
.social-group__hr
  height 1px
  // @extend .gradient5--horizontal
  background-color blue
  position relative
  top 116px
  z-index 0
  width 100%
  
.social-group__hr-carrot
  size 2.6rem
  position: absolute
  top 116px
  left 0
  right 0
  margin auto
  color blue
  
.social-group__icon
  text-align center
  col(4/12)
  &.facebook
    background transparent url(svg/symbols/social_facebook.svg) no-repeat
    background-size auto 100%
    background-position 50% 50%
  &.twitter
    background transparent url(svg/symbols/social_twitter.svg) no-repeat
    background-size auto 100%
    background-position 50% 50%
  &.linkedin
    background transparent url(svg/symbols/social_linkedin.svg) no-repeat
    background-size auto 100%
    background-position 50% 50%
  &:nth-child(1)
    left 10%
    .social-group__icon-slide
      left 10%
  &:nth-child(3)
    right 10%
    .social-group__icon-slide
      right 10%
  img, svg
    margin auto
    display block
    size 100% 8.2rem
    position relative
    z-index 1
  path
    width 100%
  &:nth-child(1) img
    float right
  &:nth-child(3) img
    float left

.social-group__icon-slide
  height 24.6rem 
  width 100%
  position absolute
  z-index -1
  bottom 0
  left 0
  right 0
  top -1px
  margin auto
  background url(svg/social_bg.svg) no-repeat
  background-size auto 100%
  background-position 50% 50%
    
.is-active .social-group__icon-slide
    transform translateX(40px)

.social-group__icon
  height 8.2rem
  position relative

.social-group__groups
  col(10/12, offset: 1/12)
  overflow hidden

.social-group__group
  col(4/12)
      
.social-group__content
  padding 8rem 3rem 4rem
  color darkgray
  margin-bottom 4rem
  background transparent
  text-align left
  small
    color gray
    fs(1.6rem)
    line-height 1.8
  h2
    color blue
    fs(2.4rem)

.chrome,
.safari
  .social-group__content
    h2
      background: hreversegradient5
      -webkit-background-clip: text
      -webkit-text-fill-color: transparent

.social-group__CTA-container
  text-align center