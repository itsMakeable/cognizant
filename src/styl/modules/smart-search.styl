.cogv1-smart-search__results
	background-color white
	padding-bottom r(10rem)
	cf()
	position relative
	&.is-active
		opacity 1
	
.cogv1-smart-search__input-container
	position relative
	+above(1024px)
		col(10/12, offset: 1/12)
	+below(1024px)
		margin-top r(2rem)

input[type=text].cogv1-smart-search__input
	background-color backgray
	padding r(1.9rem) r(6rem)
	border-radius r(0.2rem)
	fs(2.2rem)
	font-family proxLight		
	
.cogv1-smart-search__icon
	size r(2.8rem)
	color gray
	position absolute
	top 0
	bottom 0
	margin auto
.cogv1-smart-search__icon--left
	left r(2rem)
.cogv1-smart-search__icon--right
	right r(2rem)
	
.smart-search-overlay 
	.cogv1-smart-search__results
		.container
			opacity 0
			transition 0.3s ease
		&.is-active
			.container
				opacity 1

.contenteditable-module.smart-search__option
	.contenteditable__text
		margin-bottom r(1rem)
		
.cogv1-smart-search__result
	position relative
	border-bottom 1px solid gray
	padding r(2rem) 0 r(2rem) r(8.2rem)
	cf()
	+above(1024px)
		col(10/12, offset: 1/12)
	+below(1024px)
		padding r(2rem) 0 r(2rem) r(4rem)
	p
		color gray
		&:first-of-type
			upcase()
	h3
		color darkblue
		text-transform capitalize
		fs(1.8rem)
		padding-right r(4rem)
		
.cogv1-smart-search__result-type
	size r(2.8rem)
	position absolute
	left r(1.8rem)
	top r(2rem)
	+below(1024px)
		left 0
	
.cogv1-smart-search__result-CTA
	position absolute
	right r(2rem)
	size r(2.8rem)
	margin auto
	color blue
	top 0
	bottom 0
	+below(1024px)
		right 0

.cogv1-smart-search__result-message
	text-align center
	margin-top r(2.8rem)
	.button--primary
		margin-top r(2.8rem)
	p
		display inline-block
		max-width r(42rem)
		line-height 1

.cogv1-smart-search__dropdown
	padding 0 r(9rem)
	background-color white
	box-shadow 0px 2px 2px rgba(black,0.2)
	position absolute
	left r(0.1rem)
	right r(0.1rem)
	margin auto
	z-index 10
	height 0
	overflow hidden
	transition all 0.2s ease
	max-width r(109rem)
	+below(1260px)
		left r(4rem)
		right r(4rem)
	+below(768px)
		left r(2rem)
		right r(2rem)
	&.is-active
		height r(37rem)
		padding r(2rem) r(9rem)
		+below(1024px)
			padding 0 r(1rem)
	+above(1024px)
		col(10/12, offset: 1/12)
	+below(1024px)
		padding 0 r(1rem)
		
	.content-list__item-CTA
		size r(2.8rem)
		right -10%
	.content-list__item
		border-bottom 1px solid backgray
		h4
			color gray
		p
			color gray
			padding-bottom 0
			&.content-list__item-title
				color black
				
			strong
				color darkgray
			span
				color blue
		&:last-of-type
			border-bottom 1px solid transparent
		&:hover
			p.content-list__item-title
				color darkblue
				
.search-results-section
	text-align center
	.button--silent.has-icon--left
		position absolute
		left 0
		top r(-1.2rem)
		+below(768px)
			left r(4rem)
		+below(768px)
			position relative
			left 0
			
	.cogv1-smart-search__results
		text-align left
	.gradient-hr
		margin r(2rem) 0
		
.search-results-footer
	text-align center
	position relative
	p
		padding-bottom r(2.8rem)
		color darkgray
		fs(1.4rem)
	.inline-list
		li
			padding 0 r(1rem)
			fs(1.4rem)
			+below(540px)
				padding 0 r(1.8rem)
				fs(1.8rem)
				position relative
				top  r(-0.3rem)
				&:nth-child(n+6)
					display none
					
	a
		color gray
		transition 0.2s ease
		&:hover
			color darkblue
		&.is-active
			color blue
			
.search-results__nav
	position absolute
	left 0
	right 0
	top r(4.2rem)
	margin auto
	width r(32rem)
	
.search-results__nav-icon
	size(2rem)
	position absolute
	color blue
	top 0
	
.search-results__nav-icon--right
	right 0
.search-results__nav-icon--left
	left 0