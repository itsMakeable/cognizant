// BANNERS ////////////////////////////////////

/*!**
  title: Main Banner
  section: Banner Modules
  example: |
    <div class='banner-module'>
      
      <div class='banner__text'>
        <h2>Cognizant Connections</h2>
        <p>An exclusive online community for technology and business leaders.</p>
      </div>
      <div class='banner__CTA'>
        <button class='button--primary'>Sign In</button>
        <a class='button--silent'>Learn More</a>
      </div>
    </div>
***/
.banner-module
    background url(./img/bg-diamonds.jpg) repeat
    background-size cover
    background-position 50% 50%
    col(1/1)
    color white
    padding 5.4rem 0
    position relative
    height 100%
    h2
        fs(4rem)
        upcase()
    .button--primary
        color white
        display block
        float right
        &:hover
            background-color lightblue
            
    .button--silent
        boder-bottom 1px solid rgba(white,0.2)
        color white
        &:hover
            color lightblue
            border-bottom 1px solid rgba(lightblue,0.2)
    
.banner__text
    col(6/12, offset: 1/12)
    position relative
    z-index 1
    
.banner__CTA
    col(3/12, offset: 1/12)
    text-align right
    position relative
    z-index 1
    
@media screen and (max-width: 960px)
    .banner-module
        padding 3rem 1rem 2.2rem
        .button--primary
            float none
            margin 1.5rem auto 0
    .banner__text,
    .banner__CTA
        stack()
        text-align center
        padding 1rem 0
        