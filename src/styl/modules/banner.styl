// BANNERS ////////////////////////////////////

/*!**
  title: Main Banner
  section: Banner Modules
  example: |
    <div class='banner-module'>
      
      <div class='banner__text'>
        <h2>Cognizant Connections</h2>
        <p>An exclusive online community for technology and business leaders.</p>
      </div>
      <div class='banner__CTA'>
        <button class='button--primary'>Sign In</button>
        <a class='button--silent'>Learn More</a>
      </div>
    </div>
***/
.banner-module
    background url(./img/bg-diamonds.jpg) repeat
    background-size cover
    background-position 50% 50%
    center(109.2rem)
    color white
    padding 5.4rem 0 5.4rem
    position relative
    height 100%
    margin 2rem auto
    cf()
    h2
        fs(4.4rem)
        upcase()
        font-family proxReg
        +below(768px)
            fs(3rem)
    .button--primary
        color white
        display block
        float right
        &:hover
            background-color lightblue
            
    .button--silent
        boder-bottom 1px solid rgba(white,0.2)
        color white
        margin 2rem 5.7rem 0 5.7rem
        &:hover
            color lightblue
            border-bottom 1px solid rgba(lightblue,0.2)
    +below(960px)
        .app-store-button
            display inline-block
            margin 2rem
.banner__text
    col(7/12, offset: 1/12)
    position relative
    z-index 1
    h4
        fs(2.4rem)
        text-align center
        font-family proxReg
    img
        max-width 54rem
        margin 2rem auto 0 auto
    +below(960px)
        img
            margin-bottom 2rem
            
.banner__CTA
    col(3/12)
    text-align center
    position relative
    z-index 1
    min-height 9rem
    > div
        align()
    
+below(960px)
    .banner-module
        padding 3rem 2rem 2.2rem
        .button--primary
            float none
            margin 1.5rem auto 0
    .banner__text,
    .banner__CTA
        stack()
        text-align center
        padding 1rem 0
        min-height 10rem
        
.app-store-button
    width 11rem
    height auto
    margin 1rem auto