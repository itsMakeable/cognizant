.banner-module
    background url(svg/bg-diamond.svg)
    col(1/1)
    color white
    padding 5.4rem 0
    h2
        fs(4rem)
        upcase()
    button
        display block
        float right
        color white
        &.button--silent
            boder-bottom 1px solid rgba(white,0.2)
            
.banner__text
    col(6/10)
    
.banner__CTA
    col(4/10)