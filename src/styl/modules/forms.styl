$input
	// background-color rgba(0,0,0,0.1)
	border: 0px solid transparent
	width 100%
	color blue

.mkbl-form
	col(10/12)
	float none
	margin auto

.mkbl-form-button__container
	text-align center
	
.mkbl-form-button.button--primary
	// opacity 0
	background-color gray
	margin-bottom r(6rem)
	color darkgray
	&.is-active,
	&:focus
		opacity 1
		background-color blue
		color white
	
.mkbl-form-main-field
	position relative
	min-height r(9.4rem)
	.mkbl-fieldset
		margin-top 0

.mkbl-fieldset
	display block
	margin-top r(5rem)
	position relative
	width 100%
	transition all 0.4s ease-in 0s
	&.is-hidden
		display none
	&.is-active
		visibility visible
		.mkbl-label
			top r(-1rem)
			color currentColor
			transition all 0.4s cubic-bezier(0.68, 0, 0.2, 1.05) 0.1s
			opacity 1
		.mkbl-subinput
			transition all 0.3s ease
			opacity 1
			i
				opacity 1
				transition all 0.3s ease 0.3s
		.mkbl-fieldset-bg
			height r(4rem)
			background-color rgba(0,0,0,0.1)
			transition all 0.4s ease-in-out 0.2s
	&.is-filled
		.mkbl-label
			top r(-1rem)
		
	&.is-typing
		svg circle
			&:nth-of-type(3)
				-webkit-animation sparkle 0.8s infinite 0s
				animation sparkle 0.8s infinite 0s
			&:nth-of-type(2)
				-webkit-animation sparkle 0.8s infinite 0.2s
				animation sparkle 0.8s infinite 0.2s
			&:nth-of-type(1)
				-webkit-animation sparkle 0.8s infinite 0.4s
				animation sparkle 0.8s infinite 0.4s

.mkbl-fieldset-bg
	height 0
	background-color rgba(0,0,0,0)
	position absolute
	width 100%
	bottom 0
	transform-origin 50% 50%
	transition all 0.1s ease
	
.mkbl-form-subfields
	cf()
	.mkbl-fieldset
		cursor pointer
		col(1/3, cycle:3, gutter: 6)
		transform translateX(0)
		transition all 0.4s ease-in 0s
		@media screen and (max-width: 960px)
			col(1/2, cycle:2, uncycle:1, gutter: 6)
		@media screen and (max-width: 620px)
			col(1/1, cycle:1, uncycle:2, gutter: 6)	
		// &.is-clean
		// 	visibility hidden
		// 	// transform translateY(-40px)
		// 	.mkbl-label
		// 		opacity 0
		// 	.mkbl-subinput
		// 		// width 0%
		// 		opacity 0
		&.is-filled,
		&.is-active
			opacity 1
			.mkbl-subinput
				opacity 1
				// width 100%
		&.is-filled
			&.is-clean
				opacity 1
				visibility visible
				.mkbl-label
					opacity 1
				.mkbl-subinput
					opacity 1
.mkbl-label,
.mkbl-main-label
	upcase()
	color lightgray
	font-family proxSbold
	fs(1.4rem)
	position relative
	transition all 0.3s ease-in 0s
	
.mkbl-label
	top r(2.7rem)
	
.mkbl-main-label
	color currentColor
	top r(-3rem)

	
.mkbl-subinput
	@extend $input
	padding r(1.1rem) 1px
	height r(4rem)
	line-height 1
	border-bottom 1px solid lightgray
	fs(1.8rem)
	position relative
	font-family proxReg
	i
		size r(3rem) r(2rem)
		position absolute
		left r(0.5rem)
		top 0
		bottom 0
		margin auto
		color darkblue
		opacity 0
		transition all 0.3s ease
	
input[type=text],
input[type=email],
input[type=tel],
input[type=url],
input[type=search],
input[type=number],
input[type=password],
textarea
	&.mkbl-main-input
		@extend $input
		height r(8rem)
		fs(3.2rem)
		padding 0 r(3rem)
		background-color transparent
		background-color rgba(0,0,0,0.1)
		+ i
			color lightgray
		&:focus
			// background-color rgba(0,0,0,0.1)
			+ i
				color lightblue
		&.has-error
			animation wiggle 0.2s linear
			color red
			border-top 1px solid red
			border-left 1px solid red
			border-right 1px solid red
			&.mkbl-sselect
				border-bottom 1px solid red
			+ i
				color red

.mkbl-form-progress-bar
	width 100%
	height r(0.3rem)
	background-color lightgray
	position absolute
	bottom r(-0.3rem)
	&.has-error
		animation wiggle 0.2s linear

.mkbl-form-progress-bar-progress
	width 0%
	height r(0.3rem)
	position absolute
	top 0
	left 0
	bottom 0
	left 0
	transition width 0.5s cubic-bezier(0.68, 0, 0.2, 1.05) 0.2s
	background-color green

.mkbl-form-progress-bar-progress
	background-color green
	transition width 0.5s cubic-bezier(0.68, 0, 0.2, 1.05) 0.2s
	
.gradient .mkbl-form-progress-bar-progress
	background vgradient4

.mkbl-form-arrow
	position absolute
	right r(2rem)
	top r(4rem)
	// bottom -2rem
	margin auto
	size r(3.2rem)
	color blue
	transition all 0.4s ease-in 0s
	&.mkbl-down-arrow
		transform rotate(450deg)

