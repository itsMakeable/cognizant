.no-mobile .mkbl-form-hint
	display inline-block
.mkbl-form-hint
	position absolute
	right 0
	top r(-4.8rem)
	margin-top 5px
	color gray
	fs(1.2rem)
	font-family proxRegIt
	opacity 0
	display none
	vertical-align middle
	transform translateX(r(-1.6rem))
	transition all 0.3s ease-out
	&.is-displayed
		opacity 1
		transform translateX(0)
	i
		width r(2.5rem)
		height r(2rem)
		margin-right r(0.8rem)
		color lightblue
		opacity 0.9
	span
		position relative
		top 1px
		margin-right r(2.4rem)

.js-form-next
	cursor pointer

.mkbl-sselect
	background-color rgba(0,0,0,0.1)
	&:placeholder
		color darkgray
.mkbl-sselect
	&::-webkit-input-placeholder
		color darkgray

.mkbl-select-option
	// display none
	position relative
	cursor pointer
	opacity 0
	padding r(2rem) r(3rem)
	transition all 0.3s ease
	color lightgray
	@media screen and (max-height: 768px) and (min-width: 1024px)
		col(1/2, cycle:2, gutter: 0)
	
.mkbl-select-bg
	height 0
	position relative
	top r(0.3rem)
	background-color rgba(0,0,0,0.1)
	fs(1.8rem)
	font-family proxReg
	color blue
	transition height 0.3s ease-in 0s
	overflow: hidden
	&.is-open
		height r(34.9rem)
		transition height 0.4s cubic-bezier(0.68, 0, 0.2, 1.05)
		@media screen and (max-height: 768px) and (min-width: 1024px)
			height r(18.2rem)
		.mkbl-select-option
			// display block
			opacity 0.5
			background-color rgba(0,0,0,0)
			transition opacity 0.4s ease 0.2s, background-color 0.2s ease, color 0.2s ease
			&.not-filtered
				color lightblue
				opacity 1
				transition opacity 0.4s ease, background-color 0.2s ease, color 0.2s ease
			span
				position relative
				left 0
				transition 0.3s ease
			&.is-active
				background-color rgba(0,0,0,0.05)
				span
					left r(0.5rem)
.mkbl-form-complete
	position relative
	z-index: -999
	opacity 0
	padding r(2rem) 0 
	position absolute
	top 23px
	transition opacity 0.2s ease
	h3
		fs(2.2rem)
		font-family proxReg
		text-transform capitalize
	&.is-active
		transition opacity 0.3s ease
		opacity 1
		z-index: 1
	
.white-bg
	input[type=text],
	input[type=email],
	input[type=tel],
	input[type=url],
	input[type=search],
	input[type=number],
	input[type=password],
	textarea
		&.mkbl-main-input
			background-color rgba(gray,0.1)
	.mkbl-fieldset.is-active .mkbl-fieldset-bg
		background-color rgba(gray,0.1)
	.mkbl-subinput
		background-color rgba(gray,0)
	.mkbl-main-label,
	.is-active .mkbl-label
		color blue
	.mkbl-select-bg
		background-color white
		border-left 1px solid rgba(gray, 0.2)
		border-right 1px solid rgba(gray, 0.2)
	.mkbl-select-option
		&:after
			content ''
			height 1px
			display block
			background-color gray
			bottom 0
			left r(1.3rem)
			right r(1.3rem)
			position: absolute
		&:last-of-type
			&:after
				background-color transparent
	@media screen and (max-height: 768px) and (min-width: 1024px)
		.mkbl-select-option
			&:after
				content ''				
				background-color transparent
			&:last-of-type
				&:after
					background-color transparent