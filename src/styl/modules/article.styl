.cogv1_article-body__container
	+above(768px)
		padding-left r(9rem)
		padding-right r(9rem)
	
	
.cogv1_article
	counter-reset h3
	padding-top r(3rem)
	padding-bottom r(3rem)
	position relative
	.video-section
		margin r(6rem) 0
	h2
		color blue
		padding-top r(8rem)
	h3
		text-transform capitalize
		fs(2.8rem)
		margin-top r(3rem)
		padding-bottom r(3rem)
		position relative
		&:before
			content counter(h3)
			counter-increment h3
			position absolute
			left r(-8rem)
			fs(5.8rem)
			color blue
			size 5rem
			font-family proxRegIt
			top r(-2rem)
			+below(1260px)
				top r(-1.4rem)
				left r(-5rem)
				fs(5rem)
			+below(768px)
				left 0
				top r(-1.4rem)
				fs(4.4rem)
		+below(768px)
			fs(2.2rem)
			padding-left r(4rem)
	p
		padding-bottom r(1.6rem)
	hr
		border-bottom 0px solid transparent
		position relative
		margin-bottom r(6rem)
		padding-top r(3rem)
		&:after
			content ''
			display block
			height 1px
			width 100%
			background green vgradient5
			position absolute

.cogv1_article__footer
	margin r(2rem) 0


// ARTICLE FLOATING NAV /////////////////////////
// This is highly specific to article pages ////
///////////////////////////////////////////////
.cogv1_article-nav--prev
	left 0
	@media screen and (max-height: 1024px)
		transform translateX(-6rem)
	svg
		left 1.4rem

.cogv1_article-nav--next
	right 0
	@media screen and (max-height: 1024px)
		transform translateX(6rem)
	svg
		right 1.4rem
		
.cogv1_article-nav
	position absolute
	size r(6rem)
	background green hgradient66
	top r(-3rem)
	color white
	margin auto
	z-index 100
	transform-origin 0% 0%
	transition opacity 0.3s ease-out, transform 0.3s cubic-bezier(.73,.49,.28,1.21)
	&:hover
		color white
	svg
		size 3rem
		transform-origin 50% 50%
		position absolute
		top 0
		bottom 0
		margin auto
		transition 0s linear
	span 
		color gray
		text-align center
		align(horizontal)
		bottom r(-3rem)
		fs(1.6rem)
		font-family proxLight
	+below(1024px)
		display none
	@media screen and (max-height: 1024px)
		opacity 0
		&.is-scrolling
			opacity 1
			position fixed
			bottom 0
			transform translateX(0rem)
			transition opacity 0.3s ease-out, transform 0.1s linear
			&.cogv1_article-nav--prev
				left 0
			&.cogv1_article-nav--next
				right 0
			&.is-almost-bottom
				span
					display none
		&.is-bottom
			top auto
			position absolute
			bottom r(-6rem)
			opacity 1
			transform translateX(0rem) scaleY(2.116666667)
			transition transform 0.1s linear
			svg, span
				display none
.lt-ie10
	.cogv1_article-nav
		display none



// FOOTER RELATED ARTICLES //////////////////////

.cogv1_article__related
	background-color darkgreen
	background darkgreen linear-gradient(5deg, green 0%, darkblue 100%)
	text-align center
	.header--section
		padding r(5rem) 0 r(1rem)
		+below(1024)
			padding-bottom r(4.2rem)
.cogv1_article__related--large
	+below(768px)
		display none
	.container
		background-color white
		padding r(4rem) r(3rem) r(1rem) r(3rem)
		margin-top r(4rem)
	.flow-box
		col(1/3)
		box-shadow 0 0 0 0 transparent
		border 0px solid transparent
		height r(30rem)
		text-align left !important
		+below(1024px)
			col(1/2, cycle: 2)
			&:nth-child(3)
				display none
	.flow-box__title
		h2
			max-height 92px
	.flow-box__CTA-description
		position absolute
		bottom r(6rem)
	.flow-box__tag
		margin-left r(2.2rem)
		display block
		right r(2.2rem)

.cogv1_article__related--small
	.container
		background-color white
		margin-top r(2rem)
		text-align left
		padding r(1rem) r(4rem) 0
		margin 0 3%
		+below(540px)
			padding r(1rem) r(2rem) 0
			margin 0
			
+above(768px)
	.cogv1_article__related--small
		display none

// SHARING STYLES ON MOBILE FOR ARTICLES ////////
.article-mobile__share.share-flyout__trigger
	color blue
	size r(3.8rem)
	position absolute
	left 0
	top 0
	bottom 0
	margin auto
	+above(768px)
		display none

.article-mobile__share-flyout-wrapper
	position absolute
	left r(5rem)
	top r(-1rem)
	bottom 0
	margin auto
	height r(3.8rem)
	overflow hidden
	&.is-active
		.article-mobile__share-flyout
			transform translateX(0%)
		.article-mobile__share__icon.share-flyout__icon
				opacity 1

.article-mobile__share-flyout
	transform translateX(-100%)

.article-mobile__share__icon.share-flyout__icon
	color blue
	size r(3.8rem)
	margin r(0.3rem) r(0.5rem)
	opacity 0