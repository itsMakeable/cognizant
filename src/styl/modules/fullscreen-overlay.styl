.fullscreen-overlay
	@extend $absolute-cover
	background-color white
	opacity 0
	transition opacity 0.3s ease-out, z-index 0s linear 0.3s
	z-index: -99999
	padding-top r(6rem)
	min-height 100%
	.header--section
		+below(1024px)
			padding r(1.6rem) 0
	&.is-active
		opacity 1
		z-index: 99999
		transition opacity 0.3s ease-out, z-index 0s linear 0s

.fullscreen-overlay__icon
	size r(3rem)
	position fixed
	top 5%
	right 5%
	color gray
	z-index: 999
	+below(1220px)
		position absolute
		

+below(1024px)
	.smart-search-overlay
		.header--section
			padding r(5rem) 0 r(2rem) 0