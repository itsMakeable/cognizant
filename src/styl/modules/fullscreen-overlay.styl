.fullscreen-overlay
	position fixed
	top 0
	bottom 0
	right 0
	left 0
	// width 100%
	// height 100%
	background-color white
	opacity 0
	transition opacity 0.3s ease-out, z-index 0s linear 0.3s
	z-index: -99999
	.header--section
		+below(1024px)
			padding r(1.6rem) 0
	&.is-active
		opacity 1
		z-index: 9999
		transition opacity 0.3s ease-out, z-index 0s linear 0s

.fullscreen-overlay__center
	align()
	width 100%

.fullscreen-overlay__icon
	size r(3rem)
	position fixed
	top 5%
	right 5%
	color gray
	z-index: 999

+below(1024px)
	.smart-search-overlay
		.header--section
			padding r(5rem) 0 r(2rem) 0