.headline-list
	position relative
	
.headline-list__items
	cf()
	
.headline-list__item
	cf()
	height 100%
	margin 4.8rem 0
	position relative
	&:after
		content ''
		display block
		height 1px
		width 100%
		position absolute
		bottom 0
		@extend .gradient5--horizontal
	h4
		color darkgray
		font-family proxReg
	p
		color gray

.headline-list__item-title-section
	col(3/12)
	cf()
	h3
		color gray
		text-transform capitalize
	
.headline-list__item-title-img
	width 6rem
	float left
	height 100%

.headline-list__item-title
	fs(3.2rem)
	upcase()
	font-family proxBold
	line-height 1.25
	
.headline-list__item-content
	col(6/12)

.headline-list__item-CTA
	height 100%
	position relative
	col(1/12)
	float right
	display block
	img, svg
		width 2.5rem
		height 1.5rem
		// position absolute
		top 0
		bottom 0
		margin auto
		left 0
		right 0
	
.headline-list__footer
	margin-top 3rem
	text-align center
	