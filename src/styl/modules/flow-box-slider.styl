// STYLES FOR THE FLOWBOX SLIDER SECTION
// IT IS REUSABLE
.flow-box-slider-section
    +below(540px)
        .header--section
            padding r(6rem) r(2rem)
    +below(1140px)
        .slider-nav-bar,
        .slider-nav-controls
            display none

.flow-box-slider
    overflow hidden
    position: relative
    .flow-box--large
        col(8/12)
    +below(1140px)
        .flow-box--large,
        .slider-nav-bar
            col(10/12, offset: 1/12)
    +below(940px)
        .flow-box--large
            stack()
    +below(768px)
        .flow-box--large
            max-width r(54rem)
            margin-left auto !important
            margin-right auto !important
            
.flow-box__small-container
    col(4/12)
    cf()
    .flow-box
        margin-bottom r(4rem)
    +below(1140px)
        col(10/12, offset: 1/12)
        .flow-box
            margin-top 3%
            col(1/2)
    +below(940px)
        col(1/1)
    +below(768px)
        stack()
        display block
        max-width r(54rem)
        margin-left auto !important
        margin-right auto !important
        .flow-box
            stack()
            margin-top r(3rem)
            margin-bottom r(3rem)

.flow-box-slider-group
    position absolute
    opacity 0
    top 0
    // transform translateX(0%)
    transition transform 0.4s ease-in, opacity 0.1s linear 0.4s
    display none
    &.is-active
        transform translateX(0%)
        position relative
        opacity 1
        transition transform 0.75s cubic-bezier(.73,.88,0,1.02) 0.08s, opacity 0.2s linear 0.08s
        display block
    &.is-next
        transform translateX(-100%)
        display block
    &.is-prev
        transform translateX(100%)
        display block
        
