.flow-box
	padding 2%
	display inline-block
	&.gradient1--vertical
		color darkblue
	&.gradient2--vertical
		color darkgreen

.flow-box__content
	position relative
	height 100%

.flow-box__tag
	display inline-block
	background-color white
	color currentColor
	padding 0.4rem 1rem
	min-width 18rem
	i
		color lightgray
		size 1.2rem
	h4 
		upcase()
		span
			font-family proxReg

.flow-box__icon
	color white
	position absolute
	top 0
	right 0
	size 2.5rem

.flow-box__title
	color white
	margin 2rem 0
	p
		padding-top 3.6rem
	h2
		max-height 10rem
		overflow hidden
	h5
		max-height 18.7rem
		overflow hidden
		
.flow-box__CTA
	color blue
	position absolute
	bottom 0
	width 100%
	height 5rem
	border-top 1px solid currentColor

.flow-box__CTA-description
	padding 3rem 0
	color white	
	strong, b
		display block

.flow-box__CTA--left
.flow-box__CTA--right
.flow-box__CTA--share
	position absolute
	bottom 0
	size 3rem
	
.flow-box__CTA--left
	left 0
	
.flow-box__CTA--right
	right 0

.flow-box__CTA--share
	left 7rem

