.flow-box
    padding 2.2rem
    display inline-block
    position relative
    &.gradient1--vertical
        color darkblue
    &.gradient2--vertical
        color darkgreen
    p
        font-family proxLight

.flow-box__content
    position relative
    height 100%
    margin-top 5rem

.flow-box__tag
    display inline-block
    background-color white
    color currentColor
    padding 0.4rem 1rem
    min-width 18rem
    position absolute
    left 2.2rem
    top 2.2rem
    i
        color gray
        size 1.2rem
    h4 
        span
            font-family proxReg

.flow-box__meta-img
    display inline-block
    vertical-align middle
    margin 0 1rem
    
    img
        border-radius 50%

.flow-box__tag,
.flow-box__meta-text
    i
        color gray
        size 1.2rem
        [fill]
            fill currentColor
            
.flow-box__meta-text
    display inline-block
    vertical-align middle
    h4, p
        line-height 1.1
    
.flow-box__meta
    background-color white
    position absolute
    top 0
    left 0
    width 100%
    padding 0.5rem 1rem
    p
        color black

.flow-box__icon
    color white
    position absolute
    top 2.2rem
    right 2.2rem
    size 2.5rem

.flow-box__title
    color white
    margin 2rem 0
    p
        padding-top 3.6rem
    h2
        max-height 10rem
        overflow hidden
    h5
        max-height 18.7rem
        overflow hidden
        
.flow-box__CTA
    color blue
    position absolute
    bottom 5rem
    width 100%
    height 5rem
    border-top 1px solid currentColor

.flow-box__CTA-description
    padding 3rem 0
    color white 
    strong, b
        display block
    

.flow-box__CTA--left
.flow-box__CTA--right
.flow-box__CTA--share
    position absolute
    bottom 0
    size 3rem
    svg
        path
            stroke currentColor
            fill transparent
    
.flow-box__CTA--left
    left 0
    
.flow-box__CTA--right
    right 0

.flow-box__CTA--share
    left 7rem

