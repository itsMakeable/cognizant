.search-module--main
  col(1/1)
  color white
  position relative
  // overflow hidden
  cf()

.search__input
  padding 0 9.4rem
  height 6.4rem
  fs(2.5rem)
  color black
  font-family proxReg

+above(768px)
  .has-dropdown .search__input
    padding-left 33rem

.search__input::-webkit-input-placeholder
  font-family proxRegIt
  color gray

.search__input::input-placeholder
  font-family proxRegIt
  color gray

.search__icon,
.search__icon__wrapper,
.search__share
  size 6.4rem
  display: block
  position absolute
  top 0
  z-index 1
  
.search__icon,
.search__share
  svg
    size 2.8rem
    align()

.search__icon__wrapper
  overflow: hidden
  width 7.6rem
  
.search__icon
  left 0
  z-index 1
  background hgradient66
  transition all 0.4s ease-out
  transform translate(0%)
  &:before
    content ''
    display block
    position absolute
    right -12px
    z-index: -1
    top 0
    bottom 0
    margin auto
    width 0
    height 0
    border-style solid
    border-width 13px 0 13px 15px
    border-color transparent transparent transparent #6db33f

.search__share
  background-color blue
  right 0
  svg
    path 
      fill transparent
      stroke white
      transition 0.2s linear 0.1s
  &:hover
    transition background-color 0.2s ease
    background-color darkblue
  &.is-active
    background-color rgba(blue,0.4)
    svg
      path 
        fill white
        stroke white
    &:hover
      background-color rgba(blue,0.6)

.search__share-flyout
  padding-right 6.4rem
  top 0
  display inline-block
  position absolute
  right 0
  transform translateX(100%)
  .share-flyout__icon
    size 6.4rem
    border-right 1px solid rgba(darkblue, 0.2)

