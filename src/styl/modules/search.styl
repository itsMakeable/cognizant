.search-module--main
  col(1/1)
  color white
  position relative
  // overflow hidden
  cf()

input,
input[type=text],
input[type=email],
input[type=tel],
input[type=url],
input[type=search],
input[type=number],
input[type=password],
textarea,
div
  &.search__input
    padding 0 r(9.4rem)
    height r(6.4rem)
    fs(1.8rem)
    color darkgray
    font-family proxReg
    background-color white
    width 100%
    +below(768px)
      fs(1.4rem)
      padding 0 r(8.6rem)

div.search__input
  text-align left
  color gray
  font-family proxRegIt
  line-height r(6.4rem)
          
+above(768px)
  .has-dropdown
    input,
    input[type=text],
    input[type=email],
    input[type=tel],
    input[type=url],
    input[type=search],
    input[type=number],
    input[type=password],
    textarea,
    div
      &.search__input
        padding-left r(33rem)

.search__input::-webkit-input-placeholder
  font-family proxRegIt
  color gray

.search__input::input-placeholder
  font-family proxRegIt
  color gray

.search__icon,
.search__icon__wrapper,
.search__share
  size r(6.4rem)
  display: block
  position absolute
  top 0
  z-index 1
  
.search__icon
  svg
    size r(2.8rem)
    align()
    z-index: 1

.search__icon__wrapper
  overflow: hidden
  width r(7.6rem)
  
.search__icon
  left 0
  z-index 11
  background green hgradient66
  transition all 0.4s ease-out
  transform translate(0%)
  &:before
    content ''
    display block
    position absolute
    right r(-1.3rem)
    z-index: -1
    top 0
    bottom 0
    margin auto
    width 0
    height 0
    border-style solid
    border-width r(1.3rem) 0 r(1.3rem) r(1.5rem)
    border-color transparent transparent transparent #6db33f
  &.is-blue
    background-color darkblue
    background darkblue vgradient3flat
    &:before
      border-color transparent transparent transparent lightblue
    
.no-gradient,
.lt-ie10
  .search__icon:before
    display none

.search__share
  background-color blue
  right 0
  overflow hidden
  width r(6.4rem)
  .share-flyout__trigger
    size r(6.4rem)
    svg
      size r(2.8rem)
      align(vertical)
      right r(2rem)
      z-index: 1
  svg
    path 
      fill transparent
      stroke white
      transition 0.2s linear 0.1s
  &:hover
    transition background-color 0.2s ease
    background-color darkblue
  &.is-active
    background-color rgba(blue,0.4)
    width r(33rem)
    svg
      path 
        fill white
        stroke white
    &:hover
      background-color rgba(blue,0.6)

.search__share-flyout
  padding-right r(6.4rem)
  top 0
  display inline-block
  position absolute
  right 0
  transform translateX(100%)
  .share-flyout__icon
    size r(6.4rem)
    border-right 1px solid rgba(darkblue, 0.2)
.search__share.is-active
  .search__share-flyout
    width r(33rem)
    transform translateX(0%)

.search__smart-search
  width r(16rem)
  height r(2rem)
  color blue
  position: absolute
  left r(8rem)
  top 0
  bottom 0
  margin auto
  fs(1.6rem)
  border-right 1px solid gray
  p
    line-height 1.3
  +below(540px)
    display none
    
+above(540px)
  .has-smartsearch 
    input,
    input[type=text],
    input[type=email],
    input[type=tel],
    input[type=url],
    input[type=search],
    input[type=number],
    input[type=password],
    textarea,
    div
      &.search__input
        padding-left r(26rem)

.search__icon--right
  right r(2rem)
  size r(2.8rem)
  position absolute

.search__CTA
  align(vertical)
  right r(3rem)
  opacity 0
  transition 0.3s ease-out
  color blue
  +below(1024px)
    display none
  &.is-active
    right r(2rem)
    opacity 1
  svg
    position absolute
    transition 0.3s ease
  .is-empty
    z-index 1
  .is-filled
    opacity 0
  &:hover
    .is-filled
      opacity 1