+above(540px)
  .has-smartsearch .search__input
    padding-left 26rem

.search__icon--right
  right 2rem
  size 2.8rem
  position absolute

.search__CTA
  align(vertical)
  right 3rem
  opacity 0
  transition 0.3s ease-out
  color blue
  +below(1024px)
    display none
  &.is-active
    right 2rem
