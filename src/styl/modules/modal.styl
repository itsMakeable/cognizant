.modal-module
    background-color rgba(white,0.96)
    padding 3% 0
    center(r(70rem))
    position: absolute
    z-index: 999
    left 0
    right 0
    top 0
    margin 0 auto
    text-align center
    transition opacity 0.1s linear, transform 0.4s cubic-bezier(.13,.23,0,1.2), visibility 0s linear 0s
    opacity: 1
    transform translateY(r(7rem))
    &.is-reverse
      transform translateY(r(-7rem))
    &.is-hidden
      visibility hidden
      opacity: 0
      transform translateY(0)
      transition opacity 0.2s linear 0.2s, transform 0.4s ease-out, visibility 0s linear 0.4s

    +below(716px)
      margin 0 2%
    p
        color black
        max-width 100%
        padding-top r(1rem)
        +below(420px)
            fs(1.2rem)
            padding-top r(0.6rem)
            
    .subheader
        color black
        padding 0
        +below(420px)
            fs(2.2rem)
        i
            color linkedin

.modal-tip
    width: 0
    height: 0
    border-style: solid
    border-width: r(1.3rem) r(1.1rem) 0 r(1.1rem)
    border-color: rgba(white,0.94) transparent transparent transparent
    position: absolute
    bottom r(-1.4rem)
    left 0
    right 0
    margin auto
    transition 0s linear
.is-reverse .modal-tip
      border-width: 0 r(1.1rem) r(1.3rem) r(1.1rem)
      border-color: transparent transparent rgba(white,0.94) transparent

.modal__six-col
    col(6/8)
    float none
    margin auto !important
    
.modal__three-col
    col(1/3)
    margin-top r(4rem)
    text-align center
    pointer cursor
    border-bottom none
    +below(420px)
        stack()
        margin r(2rem) 0 r(1rem) 0
    .icon
        size r(2.6rem)
        margin-right r(1.7rem)
        display inline-block
        vertical-align middle
    span,
    .icon
        display inline-block
        vertical-align middle
    span
        color blue
        fs(1.6rem)
        

.modal-close
  size r(4rem)
  position fixed
  top r(6rem)
  right 0
  
