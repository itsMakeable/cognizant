			.search-module.search-module--main
				.search__icon__wrapper
					a.search__icon.gradient6reverse--horizontal
						i.icon
							svg(viewbox='0 0 100 100')
								use(xlink:href='#icon_search-article')
				
				i.icon.search__icon--right.search__CTA
					svg(viewbox='0 0 100 100')
						use(xlink:href='#icon_triangle')
				input.search__input(type='text', placeholder='Search Article for Keywords')
				.cogv1_search__section-right.is-blue
					.cogv1_search__favorites.cogv1_search__right-icon.interactive-svg
						svg.is-empty(viewbox='0 0 100 100')
							use(xlink:href='#icon_star')
						svg.is-filled(viewbox='0 0 100 100')
							use(xlink:href='#icon_star-filled')
					.cogv1_search__download.cogv1_search__right-icon
