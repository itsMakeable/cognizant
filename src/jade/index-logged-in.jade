extends layouts/layout-primary

block content
	.container.compact-profile-box__container
		component.compact-profile-box-module
			.compact-profile-box-bar
				.compact-profile-box__profile-pic
					img(src="http://placehold.it/20x20", alt="")
				p.compact-profile-box__details
					b Kyla Medina
					span.hide-small  | Information Technology &amp; Services
				.compact-profile-box__aside
					.compact-profile-box__notification
						span 3
					i.icon(data-flyout='notifications')
						svg(viewbox='0 0 100 100')
							use(xlink:href='#icon_folders')
					i.icon(data-flyout='settings')
						svg(viewbox='0 0 100 100')
							use(xlink:href='#icon_settings')
				
			subcomponent.compact-profile-box__flyout.compact-profile-box__flyout--settings
				.profile-box__indicator
				header
					p Settings
					hr
				.profile-box__button
					button.button--silent Edit Info
				.profile-box__button
					button.button--silent Log Out
			subcomponent.compact-profile-box__flyout.compact-profile-box__flyout--notifications
				.profile-box__indicator
				header
					p Recent Activity
					hr
				.profile-box__list
					each val, index in [1,2,3]
						.profile-box__list-item
							.profile-box__list-notification
								span 1
							p
								strong
									a(href='') Industry Friends
							p Invited by Larry
							i.icon.profile-box__list-CTA
								svg(viewbox='0 0 100 100')
									use(xlink:href='#icon_caret')
				button.button--silent View All

	header.main-header.gradient1--horizontal.color-bg
		.container
			.row
				component.profile-box-module.equal-height
					.profile-box
						
						.profile-box__default
							.profile-box__profile-pic
								img(src='http://placehold.it/110x110', alt='')
							i.profile-box__profile-icon
								svg(viewbox='0 0 100 100')
									use(xlink:href='#icon_linkedin')
						.profile-box__aside
							i.icon(data-flyout='settings')
								svg(viewbox='0 0 100 100')
									use(xlink:href='#icon_settings')
							.profile-box__notification
								span 3
							i.icon(data-flyout='notifications')
								svg(viewbox='0 0 100 100')
									use(xlink:href='#icon_folders')
						.profile-box__text
							h3 Good Morning
							h2 Kyla Medina
							p VP, Healthcare IT Services
						.profile-box__data
							div
								i.icon
									svg(viewbox='0 0 100 100')
										use(xlink:href='#icon_location')
								small Dallas Fort Worth Area	
							div
								i.icon
									svg(viewbox='0 0 100 100')
										use(xlink:href='#icon_industry')
								small Information Technology &amp; Services.
							div
								i.icon
									svg(viewbox='0 0 100 100')
										use(xlink:href='#icon_workplace')
								small United Healthcare
					subcomponent.profile-box-flyout.profile-box-flyout--settings
						.profile-box__indicator
						header
							p Settings
							hr
						.profile-box__button
							button.button--silent Edit Info
						.profile-box__button
							button.button--silent Log Out
					subcomponent.profile-box-flyout.profile-box-flyout--notifications
						.profile-box__indicator
						header
							p Recent Activity
							hr
						.profile-box__list
							each val, index in [1,2,3]
								.profile-box__list-item
									.profile-box__list-notification
										span 1
									p
										strong
											a(href='') Industry Friends
									p Invited by Larry
									i.icon.profile-box__list-CTA
										svg(viewbox='0 0 100 100')
											use(xlink:href='#icon_caret')
								
						button.button--silent View All
				.profile-box__headline-push.equal-height
					.headline-push__center
						h4 Did you know?
						h5 This is a fact related to the userâ€™s industry populated by demandbase.
		.container.main-header__search-container
			component.search-module.search-module--main.has-dropdown
				.search__icon__wrapper
					.search__icon.gradient6reverse--horizontal
						i
							svg(viewbox='0 0 100 100')
								use(xlink:href='#icon_search')
				.search__dropdown.js-dropdown-option-parent
					span.search__dropdown__active-selection.js-dropdown-option-holder All Industries
					.search__dropdown__icon.js-dropdown-trigger
						svg(viewbox='0 0 100 100')
							use(xlink:href='#icon_caret')
					subcomponent.contenteditable-dropdown
						ul
							li.js-dropdown-option Search Suggestion
							li.js-dropdown-option Another Suggestion
							li.js-dropdown-option Yet Anonther Suggestion
							li.js-dropdown-option Alternative Suggestion
							li.js-dropdown-option Possible Suggestion
							li.js-dropdown-option Consider this Suggestion
							li.js-dropdown-option One More Suggestion
				input.search__input(type='text', placeholder='Search Within Folders')

	include includes/index-include
	include includes/linkedin-modal
						

