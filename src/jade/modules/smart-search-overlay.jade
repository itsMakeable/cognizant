.fullscreen-overlay.smart-search-overlay
	i.icon.fullscreen-overlay__icon.js-smart-search
		svg(viewbox='0 0 100 100')
			use(xlink:href='#icon_close')
	.container
		header.header--section
			h1.inline-block.is-center.capitalize
				i.icon
					svg(viewbox='0 0 100 100')
						use(xlink:href='#icon_search')
				b Smart
				| Search
				sup &reg;
	component.contenteditable-module.smart-search__option
		.container
			.contenteditable__text
				h2
					div.noneditable Search Latest Thinking in
					div.is-editable.js-dropdown-option-parent.has-dropdown
						.contenteditable__wrapper
							div.js-dropdown-option-holder(contenteditable data-placeholder='All Industries') All Industries
						i.icon.js-dropdown-trigger
							svg(viewbox='0 0 100 100')
								use(xlink:href='#icon_caret')
						subcomponent.contenteditable-dropdown
							ul
								li.js-dropdown-option Search Suggestion
								li.js-dropdown-option Another Suggestion
								li.js-dropdown-option Yet Anonther Suggestion
								li.js-dropdown-option Alternative Suggestion
								li.js-dropdown-option Possible Suggestion
								li.js-dropdown-option Consider this Suggestion
								li.js-dropdown-option One More Suggestion
	component.cogv1-smart-search
		.container
			.cogv1-smart-search__input-container
				i.icon.cogv1-smart-search__icon.cogv1-smart-search__icon--left
					svg(viewbox='0 0 100 100')
						use(xlink:href='#icon_search')
				input.cogv1-smart-search__input(type="text")
				i.icon.cogv1-smart-search__icon.cogv1-smart-search__icon--right
					svg(viewbox='0 0 100 100')
						use(xlink:href='#icon_triangle')
		.container
			.cogv1-smart-search__dropdown
				.content-list__items
