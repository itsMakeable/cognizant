doctype html
html.no-js(lang='')
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0")
		title
		meta(name='description', content='')
		meta(name='viewport', content='width=device-width, initial-scale=1')

		link(rel='stylesheet', href='css/font.css')
		link(rel='stylesheet', href='css/main.css')
		script(src='http://cdnjs.cloudflare.com/ajax/libs/headjs/1.0.3/head.min.js')
		style.
			[data-aload] { background-image: none !important; }
		script.
			// Register custom html tags
			(function(){if(!/*@cc_on!@*/0)return;var e = "component, subcomponent".split(','),i=e.length;while(i--){document.createElement(e[i])}})()
			
